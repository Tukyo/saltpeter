{
  "name": "saltpeter",
  "version": "1.0.0",
  "description": "Multiplayer FFA Roguelike",
  "main": "electron/main.js",
  "author": "Tukyo",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --config webpack.client.config.js",
    "build:server": "webpack --config webpack.server.config.js",
    "build:dev": "npm run build:client:dev && npm run build:server",
    "build:client:dev": "webpack --mode development --config webpack.client.config.js",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "electron": "electron electron/main.js",
    "electron:build": "npm run build:client && electron-builder"
  },
  "license": "CC0-1.0",
  "keywords": [
    "game",
    "multiplayer",
    "roguelike"
  ],
  "dependencies": {
    "steamworks.js": "^0.4.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "tukyo.saltpeter",
    "productName": "Saltpeter",
    "files": [
      "electron/**/*",
      "dist/app.js",
      "dist/app.js.map",
      "public/**/*",
      "steam_appid.txt"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false,
      "icon": "electron/build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Saltpeter"
    }
  }
}
